{
  "extends": "@antfu",
  "rules": {
    "semi": "off",
    "@typescript-eslint/semi": ["error", "always", {
        "omitLastInOneLineBlock": false
    }],
    "@typescript-eslint/member-delimiter-style": ["error", {
      "multiline": {
        "delimiter": "semi",
        "requireLast": true
      },
      "singleline": {
        "delimiter": "semi",
        "requireLast": true
      },
      "multilineDetection": "brackets"
    }],
    "@typescript-eslint/consistent-type-definitions": ["warn", "type"]
  }
}